@using Domain.Models
@using System.Globalization
@model Journal
@{
    ViewData["Title"] = "Create Journal";
}

<div class="mb-3">
    <a asp-action="Index" asp-controller="Journal" class="btn btn-sm btn-secondary">
        <i class="bi bi-arrow-left me-1"></i> Journals
    </a>
</div>
<div class="row">
    <div class="col-md-6">
        <h1>Create Journal</h1>
        <hr />
        <form asp-action="Create" asp-controller="Journal" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Month" class="form-label">Month</label>
                <select asp-for="Month" class="form-select">
                    <option value="">-- Select Month --</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i">@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
                        </option>
                    }
                </select>
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Year" class="form-label">Year</label>
                <select asp-for="Year" class="form-select">
                    <option value="">-- Select Year --</option>
                    @foreach (var year in Enumerable.Range(2000, DateTime.Now.Year - 1999).Reverse())
                    {
                        <option value="@year" selected="@(year == DateTime.Now.Year)">@year</option>
                    }
                </select>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="alert alert-info" role="alert">
                <small>
                    <i class="bi bi-info-circle"></i> 
                    Create a journal for a specific month and year to start tracking your daily entries.
                </small>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-sm btn-primary">
                    <i class="bi bi-arrow-return-right me-1"></i> Submit
                </button>
                <a asp-action="Index" asp-controller="Journal" class="btn btn-sm btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
