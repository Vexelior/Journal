@using Domain.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@model JournalEntry
@{
    ViewData["Title"] = "Edit Entry";
    var prompts = ViewBag.Prompts as SelectList;
}

<div class="mb-3">
    <a asp-action="EntriesByJournalId" asp-controller="Entries" asp-route-id="@Model.JournalId" class="btn btn-sm btn-secondary">Back to Entries</a>
</div>

<div class="row">
    <div class="col-md-8">
        <h1>Edit Entry</h1>
        <hr />

        <form asp-action="Edit" asp-controller="Entries" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="JournalId" />
            <input type="hidden" asp-for="PromptId" />

            <div class="mb-3">
                <label asp-for="EntryDate" class="form-label">Entry Date</label>
                <input asp-for="EntryDate" type="date" class="form-control" required />
                <span asp-validation-for="EntryDate" class="text-danger"></span>
            </div>

            @if (Model.Prompt != null)
            {
                <div class="mb-3">
                    <label class="form-label">Original Prompt</label>
                    <div class="form-control-plaintext text-muted fst-italic">@Model.Prompt.Text</div>
                    <small class="form-text text-muted">Prompts cannot be changed after entry creation.</small>
                </div>
            }

            <div class="mb-3">
                <label asp-for="Content" class="form-label">Content</label>
                <textarea asp-for="Content" id="summernote" class="form-control" rows="15" placeholder="Write your journal entry here..." required></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            @if (Model.UpdatedAt.HasValue)
            {
                <div class="mb-3">
                    <small class="text-muted">Last updated: @Model.UpdatedAt.Value.ToString("g")</small>
                </div>
            }

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-sm btn-primary">Save Changes</button>
                <a asp-action="Details" asp-controller="Entries" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}