@using Domain.Models
@model Prompt
@{
    ViewData["Title"] = "Edit Prompt";
}

<div class="mb-3">
    <a asp-action="Index" asp-controller="Prompt" class="btn btn-sm btn-secondary">Back to List</a>
</div>

<div class="row">
    <div class="col-md-8">
        <h1>Edit Prompt</h1>
        <hr />

        <form asp-action="Edit" asp-controller="Prompt" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="mb-3">
                <label asp-for="Text" class="form-label">Prompt Text</label>
                <textarea asp-for="Text" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
                <div class="form-text">Active prompts will appear in the entry creation dropdown.</div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-sm btn-primary">Save Changes</button>
                <a asp-action="Details" asp-controller="Prompt" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}