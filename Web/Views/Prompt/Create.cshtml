@using Domain.Models
@model Prompt
@{
    ViewData["Title"] = "Create Prompt";
}

<div class="mb-3">
    <a asp-action="Index" asp-controller="Prompt" class="btn btn-sm btn-secondary">
        <i class="bi bi-arrow-left me-1"></i> Prompts
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <h1>Create New Prompt</h1>
        <hr />

        <form asp-action="Create" asp-controller="Prompt" method="post">
            <div class="mb-3">
                <label asp-for="Text" class="form-label">Prompt Text</label>
                <textarea asp-for="Text" class="form-control" rows="3" placeholder="Enter a journal prompt..." required></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" role="switch" checked />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
                <div class="form-text">Active prompts will appear in the entry creation dropdown.</div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-sm btn-primary">
                    <i class="bi bi-arrow-return-right me-1"></i> Submit
                </button>
                <a asp-action="Index" asp-controller="Prompt" class="btn btn-sm btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}