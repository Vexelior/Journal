@using Domain.Models
@model Prompt
@{
    ViewData["Title"] = "Prompt Details";
}

<div class="mb-3">
    <a asp-action="Index" asp-controller="Prompt" class="btn btn-sm btn-secondary">
        <i class="bi bi-arrow-left me-1"></i> Prompts
    </a>
</div>

<div class="card col-md-12">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Prompt Details</h5>
        <a asp-action="Edit" asp-controller="Prompt" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
            <i class="bi bi-pencil"></i>
        </a>
    </div>
    <div class="card-body">
        <p class="card-text">
            <strong>Status:</strong>
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </p>
        <p class="card-text"><strong>Text:</strong>@Model.Text</p>
        <p class="card-text"><strong>Created:</strong> @Model.CreatedAt.ToString("MM/dd/yyyy")</p>
        <p class="card-text"><strong>Used in Entries:</strong> @Model.JournalEntries.Count</p>
    </div>
</div>
