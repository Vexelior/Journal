@using Domain.Models
@model IEnumerable<Prompt>
@{
    ViewData["Title"] = "Prompts";
}

<div class="row mt-2">
    <div class="col-12 mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Journal Prompts</h1>
            <a asp-action="Create" asp-controller="Prompt" class="btn btn-sm btn-secondary">
                <i class="bi bi-plus me-1"></i> Prompt
            </a>
        </div>
        <hr />
    </div>
    @if (Model.Any())
    {
        <div class="col-12 table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr class="table-secondary">
                        <th>Text</th>
                        <th>Status</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prompt in Model.OrderByDescending(p => p.CreatedAt))
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-controller="Prompt" asp-route-id="@prompt.Id" class="text-decoration-none text-dark">
                                    @prompt.Text
                                </a>
                            </td>
                            <td>
                                <form asp-action="ToggleActive" asp-controller="Prompt" asp-route-id="@prompt.Id" id="irregular-delete-form" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-link p-0 border-0" title="@(prompt.IsActive ? "Deactivate" : "Activate")">
                                        @if (prompt.IsActive)
                                        {
                                            <i class="bi bi-check-circle-fill text-success fs-5"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-circle text-secondary fs-5"></i>
                                        }
                                    </button>
                                </form>
                            </td>
                            <td>
                                <a asp-action="Details" asp-controller="Prompt" asp-route-id="@prompt.Id" class="text-decoration-none text-dark">
                                    @prompt.CreatedAt.ToString("MM/dd/yyyy")
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No prompts found. <a asp-action="Create" asp-controller="Prompt">Create a new prompt</a>.</div>

    }
</div>
