@using Domain.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@model JournalEntry
@{
    ViewData["Title"] = "Create Entry";
    var journalId = ViewBag.JournalId as int? ?? 0;
    var prompts = ViewBag.Prompts as SelectList;
}

<div class="mb-3">
    <a asp-action="EntriesByJournalId" asp-controller="Entries" asp-route-id="@journalId" class="btn btn-sm btn-secondary">Back to Entries</a>
</div>

<div class="row">
    <div class="col-md-8">
        <h1>Create New Entry</h1>
        <hr />
        <form asp-action="Create" asp-controller="Entries" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="JournalId" value="@journalId" />
            <div class="mb-3">
                <label asp-for="EntryDate" class="form-label">Entry Date</label>
                <input asp-for="EntryDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                <span asp-validation-for="EntryDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PromptId" class="form-label">Prompt</label>
                <select asp-for="PromptId" class="form-select" asp-items="prompts">
                    <option value="">-- Select a prompt --</option>
                </select>
                <div class="form-text">Choose a writing prompt.</div>
                <span asp-validation-for="PromptId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Content" class="form-label">Content</label>
                <textarea asp-for="Content" id="summernote" class="form-control" rows="15" placeholder="Write your journal entry here..." required></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-sm btn-primary">Save Entry</button>
                <a asp-action="EntriesByJournalId" asp-controller="Entries" asp-route-id="@journalId" class="btn btn-sm btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}