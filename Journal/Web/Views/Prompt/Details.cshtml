@using Domain.Models
@model Prompt
@{
    ViewData["Title"] = "Prompt Details";
}

<div class="mb-3">
    <a asp-action="Index" asp-controller="Prompt" class="btn btn-secondary">Back to List</a>
</div>

<div class="card col-md-8 m-auto">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Prompt Details</h5>
        @if (Model.IsActive)
        {
            <span class="badge bg-success">Active</span>
        }
        else
        {
            <span class="badge bg-secondary">Inactive</span>
        }
    </div>
    <div class="card-body">
        <p class="card-text"><strong>Text:</strong><br />@Model.Text</p>
        <p class="card-text"><strong>Created:</strong> @Model.CreatedAt.ToString("MM/dd/yyyy")</p>
        <p class="card-text"><strong>Used in Entries:</strong> @Model.JournalEntries.Count</p>

        <div class="d-flex gap-2 mt-3">
            <a asp-action="Edit" asp-controller="Prompt" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <form asp-action="ToggleActive" asp-controller="Prompt" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-secondary">
                    @(Model.IsActive ? "Deactivate" : "Activate")
                </button>
            </form>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this prompt?
                <br /><br />
                <strong>"@Model.Text"</strong>
                @if (Model.JournalEntries.Any())
                {
                    <br />
                
                    <br />
                    <span class="text-warning">Warning: This prompt is used in @Model.JournalEntries.Count entr@(Model.JournalEntries.Count == 1 ? "y" : "ies").</span>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-controller="Prompt" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>