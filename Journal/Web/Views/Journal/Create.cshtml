@using Domain.Models
@model Journal
@{
    ViewData["Title"] = "Create Journal";
}
<h1>Create Journal</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <select asp-for="Year" class="form-control" asp-items="@(new SelectList(Enumerable.Range(2000, DateTime.Now.Year - 1999).Reverse()))">
            <option value="">-- Select Year --</option>
        </select>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Month" class="control-label"></label>
        <select asp-for="Month" class="form-control" asp-items="@(new SelectList(Enumerable.Range(1, 12)))">
            <option value="">-- Select Month --</option>
        </select>
        <span asp-validation-for="Month" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
