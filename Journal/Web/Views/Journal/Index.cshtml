@using Domain.Models
@using System.Globalization
@model IEnumerable<Journal>
@{
    ViewData["Title"] = "Journals";
}

<div class="row mt-2">
    <div class="col-12">
        <h1>Journals</h1>
    </div>
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <a asp-action="Details" asp-controller="Journal" asp-route-id="@item.Id" title="View" class="text-decoration-none">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(item.Month), @item.Year</h5>
                            <img src="~/images/book.jpg" alt="@item.Id" class="img-fluid" />
                        </div>
                        @if (item.JournalEntries.Any())
                        {
                            <hr class="my-3" />
                            <div class="d-flex flex-column gap-2">
                                <h6 class="mb-2">Export Options:</h6>
                                <div class="btn-group" role="group">
                                    <a asp-action="ExportText" asp-controller="Journal" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-file-text"></i> Export as Text
                                    </a>
                                    <a asp-action="ExportDocx" asp-controller="Journal" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-file-word"></i> Export as DOCX
                                    </a>
                                    <a asp-action="ExportPdf" asp-controller="Journal" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-file-pdf"></i> Export as PDF
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </a>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">No journals found.</div>
    }
</div>
